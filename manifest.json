{
  "name": "Right Click Twit",
  "version": "1.0",
  "description": "Find Tweets from selected text with a right click.",
  "background": {
    "scripts": [
      "js/jquery-1.7.2.min.js",
      "js/background.js"
    ]
  },
  "icons": {"16": "img/icon.png"},
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Show you last 10 Tweet searches.",
    "default_icon": "img/icon.png",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content.js"]
    }
  ]
}