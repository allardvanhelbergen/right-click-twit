{
  "name": "Right Click Twit",
  "version": "1.0",
  "description": "Find Tweets from selected text with a right click.",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {"16": "icon.png"},
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "contextMenus"
  ],
  "browser_action": {
    "default_title": "Search for in Tweets.",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}